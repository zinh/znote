.container-fluid
  .col-xs-2{'ng-controller' => 'searchCtrl'}
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          .navbar-brand
            ZNote
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: '#/note/new'}
                New
    .container-fluid
      %input.search{'ng-model' => 'searchText'}
    .container-fluid#note-content
      %div{'ng-repeat' => 'result in results'}
        %a{href: '#/note/view/{{result.id}}'}
          {{ result.title  }}
  .col-xs-10
    %nav.navbar.navbar-default
      .container-fluid
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-left
            %li
              %a
                Edit
            %li
              %a
                Delete
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "javascript:void(0);"}
                My Account
                <b class="caret"></b>
              %ul.dropdown-menu
                %li
                  %a{href: edit_user_path}
                    Edit
                %li
                  %a{href: logout_path}
                    Logout
    .container-fluid#note-content
      <div ng-view></div>
