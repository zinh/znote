.container-fluid.height90
  .col-xs-2.nav-no-padding.height100{'ng-controller' => 'searchCtrl'}
    %nav.navbar.navbar-default.no-margin
      .container-fluid
        .navbar-header
          .navbar-brand
            %a{href: home_path}
              ZNote
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: '#/note/new'}
                New
    .container-fluid.nav-no-padding.note-list.height100
      .list-group
        %input.search.list-group-item{'ng-model' => 'searchText', placeholder: "Search"}
          %a{'ng-repeat' => 'result in results', class: "list-group-item {{ get_current(current_id, result.id) }}", href: '#/note/view/{{result.id}}'}
            {{ result.title  }}
  .col-xs-10.nav-no-padding.height100
    %nav.navbar.navbar-default.no-margin
      .container-fluid
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-left
            %li
              %a#note_edit
                Edit
            %li
              %a#note_delete
                Delete
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "javascript:void(0);"}
                My Account
                <b class="caret"></b>
              %ul.dropdown-menu
                %li
                  %a{href: edit_user_path}
                    Edit
                %li
                  %a{href: logout_path}
                    Logout
    .container-fluid.note-content.height100
      <div class="height100" ng-view></div>
